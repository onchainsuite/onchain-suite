{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/onchain-suite-website/*": ["./src/features/website/onchain-suite/*"],
      "@/onchain-website/*": ["./src/features/website/onchain/*"],
      "@/r3tain-website/*": ["./src/features/website/r3tain/*"],
      "@/3ridge-website/*": ["./src/features/website/3ridge/*"],
      "@/auth/*": ["./src/features/core/auth/*"],
      "@/onboarding/*": ["./src/features/core/onboarding/*"],
      "@/settings/*": ["./src/features/core/settings/*"],
      "@/notifications/*": ["./src/features/core/notifications/*"],
      "@/billing/*": ["./src/features/core/billing/*"],
      "@/3ridge/*": ["./src/features/3ridge/*"],
      "@/onchain/*": ["./src/features/onchain/*"],
      "@/r3tain/*": ["./src/features/r3tain/*"],
      "@/common/*": ["./src/features/common/*"],
      "@/ui/*": ["./src/shared/components/ui/*"],
      "@/components/*": ["./src/shared/components/*"],
      "@/config/*": ["./src/shared/config/*"],
      "@/hooks/*": ["./src/shared/hooks/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/shared/types/*"],
      "@/validations/*": ["./src/shared/validations/*"],
      "@/prisma/*": ["./prisma/generated/prisma/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
